{
    "manifest_version": 3,
    "name": "Extranet Copy Buttons",
    "version": "1.5",
    "description": "A Chrome extension to copy order IDs and other information from Extranet with a click of a button",
    "permissions": [
        "clipboardWrite", "storage"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
      },
    "content_scripts": [
        {
            "matches": [
                "https://www.liftopia.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "host_permissions": [
        "https://www.liftopia.com/*"
    ],
    "web_accessible_resources": [
        {
          "resources": ["icons/copy.svg"],
          "matches": ["<all_urls>"]
        }
      ]
}